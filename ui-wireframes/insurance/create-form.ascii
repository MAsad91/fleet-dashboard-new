    "policy_number": "INS-001",
    "provider": "SafeCorp",
    "policy_type": "Liability",
    "fleet_operator": 1,
    "start_date": "2025-01-15",
    "expiry_date": "2026-01-15",
    "vehicle": 5,
    "vehicle_value": 5500000,
    "coverage_value": 12000000,
    "deductible": 25000,
    "third_party_coverage": true,
    "own_damage_coverage": false,
    "theft_coverage": true,
    "natural_disaster_coverage": true,
    "passenger_coverage": true,
    "roadside_assistance": true,
    "zero_depreciation": false,
    "personal_accident_coverage_value": 500000,
    "premium": 12500,
